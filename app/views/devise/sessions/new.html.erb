
<section class="vh-100 mb-3">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 mb-3">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start mb-3">
                <p class="lead fw-normal mb-0 me-3 text-center">Iniciar sesión</p>            
            </div>   
            <div class="field mb-3">
              <%= f.label :email, class:"form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>

            <div class="field mb-3">
              <%= f.label :password, class:"form-label" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-0">
                <%= f.check_box :remember_me, class:"form-check-input me-2" %>
                <%= f.label "recordar",class:"form-check-label" %>
              </div>
            <% end %>

            <div class="actions mb-3">
              <%= f.submit "Iniciar sesión", class:"btn btn-primary btn-lg", style:"padding-left: 2.5rem; padding-right: 2.5rem;" %><% end %>
              <p class="small fw-bold mt-2 pt-1 mb-0"><%= render "devise/shared/links" %>
            </div>
    </div>
  </div>
</section>